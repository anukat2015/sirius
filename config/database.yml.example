# PG adapter instalation on OS X with latest Postgres.app:
# gem install pg -- --with-pg-config=/Applications/Postgres.app/Contents/Versions/9.3/bin/pg_config

development:
  adapter: postgres
  encoding: unicode
  database: sirius_development
  pool: 5
  host: localhost
  #username: sirius
  #password:

